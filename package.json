{
  "name": "overwatch-hero",
  "version": "0.0.1",
  "author": "Edixon Pi√±a",
  "license": "UNLISENCED",
  "scripts": {
    "sass-watch": "sass --watch src/scss/main.scss:public/static/css/main.css",
    "sass-build": "sass --style=compressed --no-source-map src/scss/main.scss:public/static/css/main.css",
    "build": "yarn sass-build",
    "serve": "live-server public --host=localhost --port=5500",
    "dev": "concurrently \"yarn sass-watch\" \"yarn start\"",
    "start": "yarn serve"
  },
  "devDependencies": {
    "concurrently": "^6.2.0",
    "live-server": "^1.2.1",
    "sass": "^1.35.1"
  },
  "engines": {
    "node": "^12.18.0",
    "yarn": "^1.22.0"
  }
}